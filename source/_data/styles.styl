/* 定义 Inter 可变字体 */
@font-face {
  font-family: 'Inter Variable';
  src: url('/fonts/Inter-VariableFont_opsz,wght.ttf') format('truetype-variations');
  font-weight: 100 900;
  font-display: swap; /* 确保文字在加载时不会消失 */
  font-style: normal;
}

/* 全局应用字体 */
body, .post-body, .menu-item {
  font-family: 'Inter Variable', "PingFang SC", "Microsoft YaHei", sans-serif;
}

/* 针对标题微调 */
h1, h2, h3, h4, h5, h6 {
  font-family: 'Inter Variable', "PingFang SC", "Microsoft YaHei", sans-serif;
  font-weight: 700; /* 自动调用可变字体的 700 字重 */
}

.site-brand-container {
  background: #002FA7;
}


@media (max-width: 990px) {
  .sidebar-toggle, .sidebar {
    display: none;
  }
  .back-to-top {
    display: none;
  }
}

.img-custom {
  border-radius: 12px;
  box-shadow: 0 4px 10px rgba(0, 47, 167, 0.6);
  display: block;
  margin: 0 auto;
  width: 640px;
  height: auto;
  /* 针对移动端适配：如果屏幕小于 640px，则宽度为 100% */
  max-width: 100%;
}

.video-custom {
  width: 100%;
  max-width: 640px;
  margin: 0 auto;
  
  /* 圆角设置 */
  border-radius: 12px; 
  overflow: hidden;    /* 必须加这行，否则视频尖角会溢出 */
  
  /* 可选：加个阴影让视频更有质感 */
  box-shadow: 0 4px 15px rgba(0,0,0,0.2); 
}

.video-custom video {
  width: 100%;
  display: block; /* 消除底部缝隙 */
}