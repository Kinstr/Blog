body {
  background: #FFF;
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
}

.site-brand-container {
  background: #002FA7;
}


@media (max-width: 990px) {
  .sidebar-toggle, .sidebar {
    display: none;
  }
  .back-to-top {
    display: none;
  }
}

.img-custom {
  border-radius: 12px;
  box-shadow: 0 4px 10px rgba(0, 47, 167, 0.2);
  display: block;
  margin: 0 auto;
  width: 600px;
  height: auto;
  /* 针对移动端适配：如果屏幕小于 600px，则宽度为 100% */
  max-width: 100%;
}

.search-keyword {
  color: #e3143b;
  background: transparent;
  font-weight: bold;
  border-bottom: 1px solid #e3143b;
}

/* 针对所有字体强制开启 swap 模式 */
@font-face {
  font-family: 'FontAwesome';
  src: url('../fonts/fontawesome-webfont.woff2') format('woff2');
  font-display: swap; /* 关键：未载入时先用系统字体，载入后替换 */
}
